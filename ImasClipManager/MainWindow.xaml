<Window x:Class="ImasClipManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ImasClipManager.ViewModels"
        xmlns:converters="clr-namespace:ImasClipManager.Converters"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:helpers="clr-namespace:ImasClipManager.Helpers"
        Title="ImasClipManager" Height="1000" Width="1800" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConv"/>
        <helpers:BindingProxy x:Key="Proxy" Data="{Binding}"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="White" BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="出演者データをインポート..." Command="{Binding ImportPerformersCommand}"/>
                <MenuItem Header="出演者データをエクスポート..." Command="{Binding ExportPerformersCommand}"/>
                <Separator/>
                <MenuItem Header="サムネイルのクリーンアップ..." Command="{Binding CleanUpThumbnailsCommand}"/>
                <Separator/>
                <MenuItem Header="終了(_X)" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="表示(_V)">
                <MenuItem Header="表に表示する項目">
                    <MenuItem Header="サムネイル" IsCheckable="True" IsChecked="{Binding Settings.Table_Thumbnail}"/>
                    <MenuItem Header="動画ファイルパス" IsCheckable="True" IsChecked="{Binding Settings.Table_FilePath}"/>
                    <MenuItem Header="再生開始" IsCheckable="True" IsChecked="{Binding Settings.Table_StartTime}"/>
                    <MenuItem Header="再生終了" IsCheckable="True" IsChecked="{Binding Settings.Table_EndTime}"/>
                    <MenuItem Header="曲名" IsCheckable="True" IsChecked="{Binding Settings.Table_SongTitle}"/>
                    <MenuItem Header="公演名" IsCheckable="True" IsChecked="{Binding Settings.Table_ConcertName}"/>
                    <MenuItem Header="公演日" IsCheckable="True" IsChecked="{Binding Settings.Table_ConcertDate}"/>
                    <MenuItem Header="形式" IsCheckable="True" IsChecked="{Binding Settings.Table_LiveType}"/>
                    <MenuItem Header="ブランド" IsCheckable="True" IsChecked="{Binding Settings.Table_Brands}"/>
                    <MenuItem Header="出演者" IsCheckable="True" IsChecked="{Binding Settings.Table_Performers}"/>
                    <MenuItem Header="歌詞" IsCheckable="True" IsChecked="{Binding Settings.Table_Lyrics}"/>
                    <MenuItem Header="備考" IsCheckable="True" IsChecked="{Binding Settings.Table_Remarks}"/>
                    <MenuItem Header="登録日時" IsCheckable="True" IsChecked="{Binding Settings.Table_CreatedAt}"/>
                    <MenuItem Header="更新日時" IsCheckable="True" IsChecked="{Binding Settings.Table_UpdatedAt}"/>
                    <MenuItem Header="再生数" IsCheckable="True" IsChecked="{Binding Settings.Table_PlayCount}"/>
                </MenuItem>

                <MenuItem Header="詳細画面に表示する項目">
                    <MenuItem Header="サムネイル設定" IsCheckable="True" IsChecked="{Binding Settings.Editor_Thumbnail}"/>
                    <MenuItem Header="動画ファイルパス" IsCheckable="True" IsChecked="{Binding Settings.Editor_FilePath}"/>
                    <MenuItem Header="再生開始" IsCheckable="True" IsChecked="{Binding Settings.Editor_StartTime}"/>
                    <MenuItem Header="再生終了" IsCheckable="True" IsChecked="{Binding Settings.Editor_EndTime}"/>
                    <MenuItem Header="曲名" IsCheckable="True" IsChecked="{Binding Settings.Editor_SongTitle}"/>
                    <MenuItem Header="公演名" IsCheckable="True" IsChecked="{Binding Settings.Editor_ConcertName}"/>
                    <MenuItem Header="公演日" IsCheckable="True" IsChecked="{Binding Settings.Editor_ConcertDate}"/>
                    <MenuItem Header="形式" IsCheckable="True" IsChecked="{Binding Settings.Editor_LiveType}"/>
                    <MenuItem Header="ブランド" IsCheckable="True" IsChecked="{Binding Settings.Editor_Brands}"/>
                    <MenuItem Header="出演者" IsCheckable="True" IsChecked="{Binding Settings.Editor_Performers}"/>
                    <MenuItem Header="歌詞" IsCheckable="True" IsChecked="{Binding Settings.Editor_Lyrics}"/>
                    <MenuItem Header="備考" IsCheckable="True" IsChecked="{Binding Settings.Editor_Remarks}"/>
                    <MenuItem Header="登録日時" IsCheckable="True" IsChecked="{Binding Settings.Editor_CreatedAt}"/>
                    <MenuItem Header="更新日時" IsCheckable="True" IsChecked="{Binding Settings.Editor_UpdatedAt}"/>
                    <MenuItem Header="再生数" IsCheckable="True" IsChecked="{Binding Settings.Editor_PlayCount}"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding SpacePaneWidth, Mode=TwoWay, Converter={StaticResource DoubleToGridLengthConv}}" MinWidth="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#F0F0F0">



                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ToggleButton Grid.Column="0" IsChecked="{Binding IsSpacePaneVisible}"
                                  Content="≡" FontSize="18" FontWeight="Bold"
                                  Width="30" Height="30"
                                  Background="Transparent" BorderThickness="0"/>

                    <TextBlock Grid.Column="1" Text="スペース一覧" FontWeight="Bold" FontSize="16" 
                               VerticalAlignment="Center" Margin="10,0,0,0"
                               Visibility="{Binding IsSpacePaneVisible, Converter={StaticResource BoolToVis}}"/>

                    <Button Grid.Column="2" Content="＋" 
                            Command="{Binding AddSpaceCommand}"
                            Width="30" Height="30" FontSize="18" FontWeight="Bold"
                            Margin="5,0,0,0"
                            Visibility="{Binding IsSpacePaneVisible, Converter={StaticResource BoolToVis}}"
                            ToolTip="新しいスペースを追加">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <ListBox Grid.Row="1" 
                    x:Name="SpaceListBox"
                    ItemsSource="{Binding Spaces}" 
                    SelectedItem="{Binding SelectedSpace}"
                    SelectionMode="Single"
                    BorderThickness="0" Background="Transparent"
                    Margin="5,0"
                    Visibility="{Binding IsSpacePaneVisible, Converter={StaticResource BoolToVis}}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="名前を変更"
                                    Command="{Binding PlacementTarget.Tag.EditSpaceCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                    CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <MenuItem Header="削除" Foreground="Red"
                                    Command="{Binding PlacementTarget.Tag.DeleteSpaceCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                    CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid MinHeight="34">

                                <TextBlock Text="{Binding Name}" 
                                    VerticalAlignment="Center"
                                    Padding="10,0"
                                    TextTrimming="CharacterEllipsis"
                                    ToolTip="{Binding Name}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick" 
                                        Command="{Binding DataContext.EditSpaceCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>

                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Padding="5,0"
                                    Margin="0"
                                    BorderThickness="1"
                                    BorderBrush="#0078D7"
                                     Loaded="SpaceNameTextBox_Loaded"
                                    IsVisibleChanged="SpaceNameTextBox_IsVisibleChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>

                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" 
                                    Command="{Binding DataContext.CommitSpaceEditCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"/>
                                        <KeyBinding Key="Escape" 
                                    Command="{Binding DataContext.CancelSpaceEditCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"/>
                                    </TextBox.InputBindings>

                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="LostFocus">
                                            <i:InvokeCommandAction Command="{Binding DataContext.EndSpaceEditCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
            <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                      ShowsPreview="True" Background="Transparent">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Grid Background="Transparent">
                            <Border Background="White" BorderBrush="#D0D0D0" BorderThickness="1" 
                                CornerRadius="5" Width="10" Height="50"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Ellipse Width="3" Height="3" Fill="Gray" Margin="0,2"/>
                                    <Ellipse Width="3" Height="3" Fill="Gray" Margin="0,2"/>
                                    <Ellipse Width="3" Height="3" Fill="Gray" Margin="0,2"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>
            <Grid Grid.Column="2" Margin="0,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="61*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="＋ 新規クリップ追加" Padding="15,8" FontSize="14" Command="{Binding AddClipCommand}" Margin="0,0,20,0"/>

                    <TextBlock Text="🔍" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Gray"/>
                    <TextBox Width="300" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center" FontSize="14"/>
                </StackPanel>

                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Clips}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All" 
                          HorizontalGridLinesBrush="LightGray" 
                          VerticalGridLinesBrush="LightGray"
                          RowHeight="47"
                          MouseDoubleClick="DataGrid_MouseDoubleClick"
                          FontSize="13" Grid.RowSpan="2">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="詳細を見る" 
                                                  Command="{Binding PlacementTarget.Tag.ShowClipDetailCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <MenuItem Header="編集" 
                                                  Command="{Binding PlacementTarget.Tag.EditClipCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <Separator/>
                                        <MenuItem Header="削除" 
                                                  Command="{Binding PlacementTarget.Tag.DeleteClipCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                                  Foreground="Red"/>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Resources>
                        <Style TargetType="TextBlock" x:Key="BaseTextStyle">
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>

                        <Style TargetType="TextBlock" x:Key="CenterTextStyle" BasedOn="{StaticResource BaseTextStyle}">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>

                        <Style TargetType="TextBlock" x:Key="LeftTextStyle" BasedOn="{StaticResource BaseTextStyle}">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>

                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   ToolTip="{Binding}"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="サムネ" Width="0.8*" SortMemberPath="DurationMs" Visibility="{Binding Data.Settings.Table_Thumbnail, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding DurationDisplayStr}">
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Viewbox Stretch="Uniform">
                                                <Border Width="80" Height="45" Background="Black" CornerRadius="3" BorderBrush="LightGray" BorderThickness="1">
                                                    <Grid>
                                                        <Border CornerRadius="3">
                                                            <Border.Background>
                                                                <ImageBrush ImageSource="{Binding ThumbnailPath, Converter={StaticResource PathToImageConv}}" Stretch="Uniform"/>
                                                            </Border.Background>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </Viewbox>
                                            <Border Background="#CC000000" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,2,2" Padding="2,0" CornerRadius="2">
                                                <TextBlock Text="{Binding DurationDisplayStr}" Foreground="White" FontSize="11" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="動画ファイルパス" Width="1.5*" SortMemberPath="FilePath" Visibility="{Binding Data.Settings.Table_FilePath, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding FilePath}">
                                        <TextBlock Text="{Binding FilePath}" Style="{StaticResource LeftTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="再生開始" Width="0.9*" SortMemberPath="StartTimeMs" Visibility="{Binding Data.Settings.Table_StartTime, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding StartTimeStr}">
                                        <TextBlock Text="{Binding StartTimeStr}" Style="{StaticResource CenterTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="再生終了" Width="0.9*" SortMemberPath="EndTimeMs" Visibility="{Binding Data.Settings.Table_EndTime, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding EndTimeStr}">
                                        <TextBlock Text="{Binding EndTimeStr}" Style="{StaticResource CenterTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="曲名" Width="1.5*" SortMemberPath="SongTitle" Visibility="{Binding Data.Settings.Table_SongTitle, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding SongTitle}">
                                        <TextBlock Text="{Binding SongTitle}" Style="{StaticResource CenterTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="公演名" Width="1.5*" SortMemberPath="ConcertName" Visibility="{Binding Data.Settings.Table_ConcertName, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding ConcertName}">
                                        <TextBlock Text="{Binding ConcertName}" Style="{StaticResource CenterTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="公演日" Width="0.8*" SortMemberPath="ConcertDate" Visibility="{Binding Data.Settings.Table_ConcertDate, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding ConcertDate, StringFormat=yyyy/MM/dd}">
                                        <TextBlock Text="{Binding ConcertDate, StringFormat=yyyy/MM/dd}" Style="{StaticResource CenterTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="形式" Width="0.6*" SortMemberPath="LiveType" Visibility="{Binding Data.Settings.Table_LiveType, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding LiveType, Converter={StaticResource LiveTypeConv}}">
                                        <TextBlock Text="{Binding LiveType, Converter={StaticResource LiveTypeConv}}" Style="{StaticResource CenterTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="ブランド" Width="1.2*" SortMemberPath="Brands" Visibility="{Binding Data.Settings.Table_Brands, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding Brands, Converter={StaticResource BrandTypeConv}}">
                                        <TextBlock Text="{Binding Brands, Converter={StaticResource BrandTypeConv}}" 
                                                Style="{StaticResource CenterTextStyle}"
                                                TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="出演者" Width="1.5*" SortMemberPath="PerformersSortKey" Visibility="{Binding Data.Settings.Table_Performers, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding Converter={StaticResource ClipPerformersConv}}">
                                        <TextBlock Text="{Binding Converter={StaticResource ClipPerformersConv}}" 
                                                Style="{StaticResource CenterTextStyle}"
                                                TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="歌詞" Width="2*" SortMemberPath="Lyrics" Visibility="{Binding Data.Settings.Table_Lyrics, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding Lyrics}">
                                        <TextBlock Text="{Binding Lyrics}" Style="{StaticResource LeftTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="備考" Width="1.5*" SortMemberPath="Remarks" Visibility="{Binding Data.Settings.Table_Remarks, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding Remarks}">
                                        <TextBlock Text="{Binding Remarks}" Style="{StaticResource LeftTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="登録日時" Width="0.9*" SortMemberPath="CreatedAt" Visibility="{Binding Data.Settings.Table_CreatedAt, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent">
                                        <Border.ToolTip>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='yyyy/MM/dd - HH:mm:ss'}"/>
                                        </Border.ToolTip>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CreatedAt, StringFormat=yyyy/MM/dd}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat=HH:mm:ss}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="更新日時" Width="0.9*" SortMemberPath="UpdatedAt" Visibility="{Binding Data.Settings.Table_UpdatedAt, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent">
                                        <Border.ToolTip>
                                            <TextBlock Text="{Binding UpdatedAt, StringFormat='yyyy/MM/dd - HH:mm:ss'}"/>
                                        </Border.ToolTip>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding UpdatedAt, StringFormat=yyyy/MM/dd}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding UpdatedAt, StringFormat=HH:mm:ss}" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="再生数" Width="0.5*" SortMemberPath="PlayCount" Visibility="{Binding Data.Settings.Table_PlayCount, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" ToolTip="{Binding PlayCount}">
                                        <TextBlock Text="{Binding PlayCount}" Style="{StaticResource CenterTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>