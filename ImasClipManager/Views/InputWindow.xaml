<Window x:Class="ImasClipManager.Views.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="入力" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="15">
        <TextBlock Text="{Binding Message}" Margin="0,0,0,10"/>
        <TextBox Name="InputTextBox" Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" IsDefault="True" Width="70" Click="Ok_Click" Margin="0,0,10,0"/>
            <Button Content="キャンセル" IsCancel="True" Width="70"/>
        </StackPanel>
    </StackPanel>
</Window>